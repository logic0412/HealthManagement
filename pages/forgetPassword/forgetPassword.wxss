/* pages/resetPassword/resetPassword.wxss */
.container {
  display: flex;
  flex-direction: column;
  padding: 20px;
  background-color: #f8f8f8;
}

.input-group {
  margin-bottom: 15px;
}

.label {
  display: block;
  color: #333;
  font-size: 16px;
  margin-bottom: 5px;
}

.input {
  width: 100%;
  height: 40px;
  padding: 0 10px;
  line-height: 40px;
  border-radius: 5px;
  border: 1px solid #ccc;
  background-color: #fff;
}

.button {
  height: 45px;
  background-color: #1AAD19;
  color: white;
  border-radius: 5px;
  font-size: 16px;
  text-align: center;
  line-height: 45px; /* Adjust line height to center text vertically */
  margin-top: 20px;
}

/* pages/myprofile/myprofile.wxss */
.container {
    display: flex;
    flex-direction: column;
    padding: 20px;
    background-color: #fff; /* 设置背景颜色 */
}

.title {
    font-size: 20px;
    color: #333;
    margin-bottom: 20px; /* 标题下的间距 */
}

.input-group {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
}

.label {
    width: 90px; /* 确保标签的宽度一致 */
    color: #666;
    font-size: 16px;
    margin-right: 10px; /* 标签和输入框之间的间距 */
}

.input, .picker {
    flex-grow: 1;
    height: 40px;
    line-height: 40px;
    padding: 0 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

.picker {
    display: block; /* 确保picker填满剩余空间 */
    text-align: left;
    color: #333; /* 输入内容的颜色 */
}

.button {
    width: 100%;
    height: 45px;
    background-color: #1AAD19;
    color: white;
    border: none;
    border-radius: 5px;
    margin-top: 10px;
    font-size: 16px;
    text-align: center;
}

.button.reset {
    background-color: #ff4444; /* 重置密码按钮的颜色 */
}

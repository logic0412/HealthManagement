/* pages/myprofile/myprofile.wxss */
.container {
    display: flex;
    flex-direction: column;
    padding: 20px;
    background-color: #f8f8f8; /* 背景颜色 */
}

.input-group {
    margin-bottom: 15px;
}

.label {
    display: block;
    color: #333;
    font-size: 16px;
    margin-bottom: 5px;
}

.input {
    width: 100%;
    height: 40px;
    padding: 0 10px;
    line-height: 40px;
    border-radius: 5px;
    border: 1px solid #ccc;
    font-size: 16px;
    background-color: #fff;
}

.button {
    width: 100%;
    height: 45px;
    background-color: #1AAD19;
    color: white;
    border: none;
    border-radius: 5px;
    margin-top: 10px;
    font-size: 16px;
    text-align: center;
}

.button.reset {
    background-color: #ff4444; /* 红色按钮用于重置密码 */
}

.picker {
    width: 100%;
    height: 40px;
    line-height: 40px;
    padding: 0 10px;
    border-radius: 5px;
    border: 1px solid #ccc;
    background-color: #fff;
    text-align: left;
}
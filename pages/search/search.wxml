<!-- search.wxml -->
<view class="container">
  <view class="search-bar">
    <input placeholder="请输入药品名称或关键词" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" onBlur="hideInput" />
    <button bindtap="searchDrugs">搜索药品</button>
  </view>
  <view class="search-results">
    <block wx:for="{{searchResult}}" wx:key="id">
      <view>{{item.name}}</view>
      <view>{{item.description}}</view>
      <view>{{item.indications}}</view>
      
    </block>
  </view>
  <map markers="{{datatlist}}" id="myMap" 
    class="maMap" longitude="{{longitude}}" 
    latitude="{{latitude}}" controls="{{controls}}" 
    bindcontroltap="controltap" 
    bindmarkertap="markertap" 
    polyline="{{polyline}}" 
    bindregionchange="regionchange" show-location style="width: 100%; height: 300px; position: relative; left: 1rpx; top: 2rpx"></map>
  <view class="search-button">
    <button bindtap="resetMap">搜索附近药店</button>
  </view>
</view>


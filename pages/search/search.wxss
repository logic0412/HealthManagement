/* search.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 20px;
}

.search-bar {
  display: flex;
  flex-direction: row; 
  align-items: center; 
  margin-bottom: 20px;
}

.search-bar input {
  flex-grow: 1; 
  padding: 10px;
  border: 2px solid #ccc;
  border-right: none; 
  border-radius: 5px 0 0 5px; 
}

.search-bar button {
  background-color: #1AAD19;
  color: white;
  border-radius: 0 5px 5px 0; 
  cursor: pointer; 
}

.search-results view {
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.maMap {
  margin-top: 20px;
  border-radius: 10px; 
  box-shadow: 0 4px 6px rgba(0,0,0,0.1); 
}

.search-button button {
  border: 1px solid #1AAD19;
  background-color: #1AAD19;
  color: white;
  border-radius: 5px; 
  cursor: pointer;
  display: block; 
  margin: 10px 0; 
}


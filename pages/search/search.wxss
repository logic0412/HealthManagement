/* search.wxss */
.container {
  padding: 10px;
}

.search-bar {
  display: flex;
  flex-direction: row;
  margin-bottom: 20px;
}

.search-bar input {
  flex: 1;
  border: 1px solid #ccc;
  padding: 10px;
  border-radius: 5px;
}

.search-bar button {
  margin-left: 10px;
}

.search-results view {
  padding: 5px;
  border-bottom: 1px solid #eee;
}

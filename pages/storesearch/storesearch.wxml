<view class="container">
  <map markers="{{datatlist}}" id="myMap" 
    class="maMap" longitude="{{longitude}}" 
    latitude="{{latitude}}" controls="{{controls}}" 
    bindcontroltap="controltap" 
    bindmarkertap="markertap" 
    polyline="{{polyline}}" 
    bindregionchange="regionchange" show-location style="width: 100%; height: 600px; position: relative; left: 1rpx; top: 2rpx"></map>
  <view class="search-button">
    <button bindtap="resetMap">搜索附近药店</button>
  </view>
</view>
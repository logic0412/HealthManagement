<!-- pages/login/login.wxml -->
<view class="container">
  <view class="logo">
    <image src="6673747_care_doctor_health_healthcare_history_icon.png" mode="aspectFit"></image>
  </view>
  <view class="input-group">
    <input class="input" type="text" placeholder="请输入手机号" bindinput="inputPhone" />
    <input class="input" type="password" placeholder="请输入密码" bindinput="inputPassword" />
  </view>
  <button class="login-button" bindtap="manualLogin">登录/注册</button>
  <view class="divider"></view>
  <button class="wechat-button" open-type="getUserInfo" bindgetuserinfo="wechatLogin">微信一键登录</button>
</view>

/* pages/profile/profile.wxss */
.profile-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20px;
}

.user-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  cursor: pointer;
}

.avatar {
  width: 60px;
  height: 60px;
  border-radius: 30px;
  margin-right: 10px;
}

.username {
  font-size: 16px;
  color: #333;
}
